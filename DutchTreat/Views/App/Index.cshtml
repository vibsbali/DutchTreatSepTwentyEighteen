@{
   ViewBag.Title = "Home Page";
}

<div class="product-info">
   <img src="~/img/VanGogh.jpg" alt="Alternate Text" />
   <h3>Mug</h3>
   <ul class="product-props">
      <li>Price: $9.99</li>
      <li>Artist: Van Gogh</li>
      <li></li>
      <li>Description: Self-portrait</li>
   </ul>
   <button id="buyButton">Buy</button>
</div>

<div id="theForm">
   <form>
      <label>Your Name:</label>
      <br />
      <input type="text" value="" />
      <br />
      <label>Email:</label>
      <br />
      <input type="email" value="" />
      <br />
      <label>Subject:</label>
      <br />
      <input type="text" value="" />
      <br />
      <label>Message:</label>
      <br />
      <textarea rows="4"></textarea>
      <br />
      <input type="submit" name="name" value="Send Message" />
   </form>
</div>

<div>
   <div id="loginToggle">Login</div>
   <form class="popup-form">
      <div>
         <label>Username</label>
         <input type="text" name="name" value="" />
      </div>
      <div>
         <label>Password</label>
         <input type="password" name="name" value="" />
      </div>
      <div>
         <input type="checkbox" />
         <label>Remember Me?</label>
      </div>
      <div>
         <input type="submit" value="Login" />
      </div>
   </form>
</div>
